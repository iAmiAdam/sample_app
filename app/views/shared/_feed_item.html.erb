<li id="<%= feed_item.id %>">
	<%= link_to gravatar_for(feed_item.user), feed_item.user %>
	<span class="user">
		<%= link_to feed_item.user.name, feed_item.user %><%= " @#{feed_item.user.username}" %>
	</span>
	<span class="content"><%= feed_item.content %></span>
	<span class="timestamp">
		Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
	</span>
	<% if current_user?(feed_item.user) %>
		<%= link_to content_tag('bin', '', class: 'icon-trash'), feed_item, confirm: "Are you sure you want to delete this post?", method: :delete %>
	<% end %>
</li>