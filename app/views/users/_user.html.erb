<li>
	<%= gravatar_for user, size: 52 %>
	<%= link_to user.name, user.username %><%= " @#{user.username}" %>
	<% if current_user.admin? && !current_user?(user) %>
	| <%= link_to content_tag('i', '', class: 'icon-trash'), user, confirm: "Are you sure you want to delete '#{user.name}'?", method: :delete %>
	<% end %>
</li>